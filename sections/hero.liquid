{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="header-container">
  <h1>
    <img src="{{ 'hero-image.svg' | asset_url }}" />
    <span> Vintage & Thrift </span>
  </h1>
  <div class="hero-collections"> 
    <div class="hero-collections__card-ctn">
      {% for block in section.blocks %}  
        <a class="hero-collections__card" href="{{ block.settings.collection.url }}">
          <div class="hero-collections__card--bg" style="background-image: url({{ block.settings.image_bg | image_url }});"></div>
          <div class="hero-collections__card--hover" style="background-image: url({{ block.settings.image_hover | image_url }});"></div>
          <h3 class="hero-collections__card-title">{{ block.settings.collection.title | downcase }}</h3>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "blocks": [
    {
      "type": "collection",
      "limit": 3,
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image_bg",
          "label": "Image background"
        },
        {
          "type": "image_picker",
          "id": "image_hover",
          "label": "Image hover"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
